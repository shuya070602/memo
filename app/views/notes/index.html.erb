<div class="container">
  <div class="row">
  	<div class="col-xs-4">
      <h2>新規メモ</h2>
      <!--新規メモのviewの呼び出し-->
      <%= render 'notes/new', note: @note %>
    </div>

  	  <div class="col-xs-8">
      <%= render 'notes/search' %>
  	  <h2>メモ一覧</h2><br>
      <table class="table">
        <tr>
          <th>作成日</th>
          <th>題名</th>
          <th></th>
          <th></th>
        </tr>

        <% @notes.each do |note| %>
        <tr>
          <td><%= note.created_at.strftime('%Y/%m/%d')%></td>
          <td><%= note.title %></td>
          <td><%= link_to "詳細", note_path(note.id) %></td>
          <td><%= link_to "削除", note, method: :delete, data: {confirm: "メモを削除しますか？"} %></td>
        </tr>
        <% end %>
      </table>
  	</div>
  </div>
</div>
