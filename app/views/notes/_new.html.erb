<h2>新規メモ</h2><br>
  <%= form_for(note) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label "題名" %>
    <%= f.text_field :title %>
  </div><br>

  <div class="field">
  	<%= f.label "本文" %>
  	<%= f.text_area :body %>
  </div><br>

  <div class="action">
  	<%= f.submit "投稿する" %>
  </div>

  <% end %>