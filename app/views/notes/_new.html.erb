<!--新規メモ-->
<%= form_for(note) do |f| %>
<!--エラーメッセージの表示-->
<%= render 'layouts/error_messages', model: f.object %>
<div class="field">
  <%= f.label "題名" %><br>
  <%= f.text_field :title %>
</div><br>

<div class="field">
  <%= f.label "本文" %><br>
  <%= f.text_area :body, size: "30x10" %>
</div><br>

<div class="action">
  <%= f.submit "投稿する", class: "btn btn-success" %>
</div>

<% end %>