<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>グループ作成</h2>

       <%= form_for(@group) do |f| %>
       <!--エラーメッセージの表示-->
       <%= render 'layouts/error_messages', model: f.object %>

       <div class="field">
         <%= f.label "グループ名" %><br>
          <%= f.text_field :name %>
       </div><br>

       <div class="action">
         <%= f.submit "作成", class: "btn btn-success" %>
       </div>
       <% end %>
    </div>
  </div>
</div>