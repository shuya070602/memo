<div class="container">
   <div class="row">
    <div class="col-xs-12">
    <h2>会員編集</h2>
　　<%= form_for(@user) do |f| %>
　　<div class="field">
    　<%= f.label :名前 %>
	    <%= f.text_field :name %>
    </div><br>

    <div class="field">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email %>
    </div><br>

    <div class="actions">
	    <%= f.submit "保存" %>
    </div>

   <% end %>
</div>