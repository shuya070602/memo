<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h2>マイページ</h2>
        <table class="table">
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </table>

        <%= link_to "編集", edit_user_path(current_user), class: "btn btn-success" %><br><br>
        <%= link_to "パスワードを変更する", edit_user_registration_path(current_user), class: "btn btn-primary" %><br><br>
        <%= link_to "退会する", users_confirm_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
