<!DOCTYPE html>
<html>
  <head>
    <title>Memo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダーの記述-->
    <header class="navbar navbar-link", style="background-color: black;">
      <div class="container">
      <%= link_to "memo", root_path %>

      <nav class="nav">
        <ul> <!--ログイン時-->
        <% if user_signed_in? %>
          <li><%= link_to "使い方", homes_about_path %></li>
          <li><%= link_to "マイページ", user_path(current_user) %></li>
          <li><%= link_to "メモ一覧", notes_path %></li>
          <li><%= link_to "ジャンル一覧", genres_path %></li>
          <li><%=link_to "ログアウト",destroy_user_session_path, method: :delete, date: {confirm: "ログアウトしますか？"} %></li>
        <% else %> <!--ログアウト時-->
          <li><%= link_to "使い方", homes_about_path %></li>
          <li><%= link_to "新規登録", new_user_registration_path %></li>
          <li><%= link_to "ログイン", new_user_session_path %> </li>
        <% end %>
        </ul>
      </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
